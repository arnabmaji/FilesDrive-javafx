<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="io.github.arnabmaji19.controller.FileDetailsDialogController"
          prefHeight="500.0" prefWidth="400.0" alignment="CENTER" hgap="10" vgap="20"
          stylesheets="@../styles/style.css">
    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
        GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <Image url="@../images/file.png"/>
    </ImageView>
    <Text
            text="File Name"
            GridPane.rowIndex="1"
            GridPane.columnIndex="0"/>
    <Text
            fx:id="fileNameText"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"/>
    <Text
            text="Owner"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"/>
    <Text
            fx:id="ownerText"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"/>
    <Text
            text="Upload Date"
            GridPane.rowIndex="3"
            GridPane.columnIndex="0"/>
    <Text
            fx:id="uploadDateText"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"/>
    <Text
            text="Size"
            GridPane.rowIndex="4"
            GridPane.columnIndex="0"/>
    <Text
            fx:id="sizeText"
            GridPane.rowIndex="4"
            GridPane.columnIndex="1"/>


</GridPane>
